{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "target": "es2018",
    "parser": {
      "decorators": true,
      "dts": true,
      "syntax": "typescript"
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "keepClassNames": true
  },
  "module": {
    "type": "commonjs"
  }
}